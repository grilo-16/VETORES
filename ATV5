#include <stdio.h>

int main() {
    int vetor[10];
    int quantidadePares = 0;

    // Ler o vetor de 10 elementos
    printf("Digite 10 valores inteiros:\n");

    for (int i = 0; i < 10; i++) {
        printf("Valor %d: ", i + 1);
        scanf("%d", &vetor[i]);

        // Verificar se o valor Ã© par
        if (vetor[i] % 2 == 0) {
            quantidadePares++;
        }
    }

    // Imprimir a quantidade de valores pares
    printf("O vetor possui %d valores pares.\n", quantidadePares);

    return 0;
}
